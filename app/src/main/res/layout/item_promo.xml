<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp"
    android:layout_marginStart="5dp"
    android:layout_marginBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="10dp"
    android:layout_height="120dp">

    <ImageView
        android:id="@+id/img_thumb_background"
        android:adjustViewBounds="true"
        android:foreground="#99000000"
        android:foregroundTintMode="src_atop"
        android:scaleType="centerCrop"
        android:src="@drawable/default_food_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    
    <LinearLayout
        android:layout_marginStart="10dp"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="14sp"
            android:id="@+id/tv_promo_persen"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@android:color/white"
            android:text="UPTO\n20% OFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textSize="12sp"
            android:id="@+id/tv_promo_duration"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/white"
            android:text="12 JAN - 30 FEB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    
    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/img_thumb"
        android:layout_gravity="end"
        android:src="@drawable/default_food_img"
        android:layout_width="128dp"
        android:layout_height="match_parent"/>

</androidx.cardview.widget.CardView>